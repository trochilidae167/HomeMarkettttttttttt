@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var donhangmoi = (List<HomeMarket.Models.DonHang>)ViewBag.DonHangMoi;
    var khachhangmoi = (List<HomeMarket.Models.KhachHang>)ViewBag.KhachHangMoi;
    var nguoidichomoi = (List<HomeMarket.Models.NguoiDiCho>)ViewBag.NguoiDiChoMoi;
    var phanhoimoi = (List<HomeMarket.Models.PhanHoi>)ViewBag.PhanHoiMoi;
}

    <div class="row">
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-user-plus fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">@khachhangmoi.Count()</div>
                            <div>Khách hàng mới</div>
                        </div>
                    </div>
                </div>
                <a href="/KhachHang/Index">
                    <div class="panel-footer">
                        <span class="pull-left">Xem</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-green">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-motorcycle fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">@nguoidichomoi.Count()</div>
                            <div>Người đi chợ mới</div>
                        </div>
                    </div>
                </div>
                <a href="/NguoiDiCho/Index">
                    <div class="panel-footer">
                        <span class="pull-left">Xem</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-shopping-cart fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">@donhangmoi.Count()</div>
                            <div>Đơn hàng mới</div>
                        </div>
                    </div>
                </div>
                <a href="/DonHang/Index">
                    <div class="panel-footer">
                        <span class="pull-left">Xem</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-red">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-comments fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">@phanhoimoi.Count()</div>
                            <div>Phản hồi</div>
                        </div>
                    </div>
                </div>
                <a href="/PhanHoi/Index">
                    <div class="panel-footer">
                        <span class="pull-left">Xem</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
